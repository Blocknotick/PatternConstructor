@model PatternConstructor.Models.User

@{
}
<h1>Избранное</h1>

 <div class="album py-5">
     <div class="container">
         <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
             @foreach (var article in Model.FavoriteArticles)
            {
                <a class="nav-link text-dark" asp-controller="Articles" asp-action="DetailArticle" asp-route-id="@article.ArticleId">
              <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@article.Article.Image" style="object-fit: scale-down; height:250px; width: 100%;" alt="Card image cap">

                        <div class="card-body">
                            <p class="card-text"> @article.Article.Title </p>
                        </div>
                    </div>
               </div>
           </a>   
                           
                
            }
        </div>
     </div>
</div>