@{
}
@model LoginViewModel
<h1 class="text-DarkPurple text-center fw-bold">Авторизация</h1>

<div class="row d-flex justify-content-center">
    <div class="col-md-8 text-DarkPurple">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label fs-5"></label>
                <input asp-for="Email" class="form-control fs-5">
                <span asp-validation-for="Email" class="text-danger"></span>                    
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label fs-5"></label>
                <input asp-for="Password" class="form-control fs-5" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input class="btn btn-favorite fs-4" type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>