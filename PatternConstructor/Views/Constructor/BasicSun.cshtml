@{
}
@model PatternConstructor.ViewModels.SunSkirtConstructModel

<h1>Генератор базовой выкройки юбки-солнца</h1>


<img src="~/sunskirt.png"/>

<div class="row">
    <div class="col-md-4">
        <form>
        <select class="form-select" aria-label="Выбор размера" id="ddltype" name="type" asp-items="ViewBag.Types" >
            <option>Выберите размер</option>
        </select>

        </form>
        <form asp-action="BasicSun">

            <div  class="text-danger"></div>

                        
            <div class="form-group">
                <label asp-for="WaistGirth" class="control-label"></label>
                <input asp-for="WaistGirth" class="form-control"/>
                <span asp-validation-for="WaistGirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>

        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}