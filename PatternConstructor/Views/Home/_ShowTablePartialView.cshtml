@{
}
@model StandartMeasure
 
<table class="table">
    <thead>
        <tr>
            <th scope="col">Мерка</th>
            <th scope="col">Значение, см</th>
        </tr>
    </thead>
    <tbody>
    <tr>
      <td>Рост</td>
      <td>@Model.Height</td>
    </tr>

    <tr>
      <td>Размер</td>
      <td>@Model.Size</td>
    </tr>

    <tr>
      <td>Обхват груди</td>
      <td>@Model.Measure.BustGirth</td>
    </tr>

    <tr>
      <td>Обхват талии</td>
      <td>@Model.Measure.WaistGirth</td>
    </tr>

    <tr>
      <td>Обхват бедер</td>
      <td>@Model.Measure.HipsGirth</td>
    </tr>

    </tbody>
</table>